{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,

    /* Allow absolute imports from /src, e.g. "components/..." */
    "baseUrl": "src"
  },
  "include": ["src"]
}
